<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
<include layout="@layout/title_layout" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvGoodsNameEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvGoodsNameCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dapen"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.00"
            android:textSize="28sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <cn.ucai.fulicenter.ui.view.SlideAutoLoopView
        android:id="@+id/salv"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/good_detail_bg_white" />

    <cn.ucai.fulicenter.ui.view.FlowIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:count="4"
        app:focus="0"
        app:focus_color="@color/good_detaul_flow_indicator_focus"
        app:normal_color="#a1d1d1d1"
        app:r="5dp"
        app:space="3dp" />
    <WebView
        android:id="@+id/wvDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>